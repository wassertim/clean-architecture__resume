<!DOCTYPE html>
<html lang="{{language}}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=5.0">
    <title>{{pageTitle}}</title>
    <meta name="description" content="{{pageTitle}} - {{skills.intro}}">
    <link rel="stylesheet" href="/css/styles.css">    
</head>
<body>
    <div class="container">
        <div class="top-controls">
            <button id="theme-toggle" class="theme-toggle" aria-label="Toggle theme">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-moon"><path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path></svg>
            </button>
            <div class="language-toggle">
                <a href="/en/" class="lang-link{{#if (eq language 'en')}} active{{/if}}">EN</a>
                <span class="lang-separator">|</span>
                <a href="/de/" class="lang-link{{#if (eq language 'de')}} active{{/if}}">DE</a>
            </div>
        </div>
        <header class="header-content">
            <div class="header-text">
                <h1>{{name}}</h1>
                <p>{{objective.description}}</p>
                <div class="social-links">
                    <a href="{{socialLinks.xing}}" target="_blank" rel="noopener noreferrer" aria-label="Xing">
                        <i class="fab fa-xing"></i>
                    </a>
                    <a href="{{socialLinks.linkedin}}" target="_blank" rel="noopener noreferrer" aria-label="LinkedIn">
                        <i class="fab fa-linkedin"></i>
                    </a>
                    <a href="{{socialLinks.github}}" target="_blank" rel="noopener noreferrer" aria-label="GitHub">
                        <i class="fab fa-github"></i>
                    </a>
                </div>
            </div>
            <div class="photo-container">
                <img src="/images/photo.jpg" alt="{{name}}" class="profile-photo">
            </div>
        </header>

        <section class="section">
            <h2>{{education.title}}</h2>
            {{#each education.items}}
                <p><strong>{{institution}}</strong> - {{location}}</p>
                <p>{{major}}</p>
            {{/each}}
        </section>

        <section class="section section__skills">            
            <h2>{{skills.title}}</h2>
            <p class="skills-intro">{{skills.intro}}</p>

            <div class="skills">
                {{#each skills.categories}}
                    <div class="skill-category">
                        <h3>{{title}}</h3>
                        <p>{{description}}</p>
                        <ul class="skill-list">
                            {{#each items}}
                            <li>{{this}}</li>
                            {{/each}}
                        </ul>
                    </div>
                {{/each}}
            </div>
        </section>

        <section class="section section__experience">
            <h2>{{experience.title}}</h2>
            {{#each experience.items}}
                <div class="experience">
                    <h3>{{position}} - {{company}}</h3>
                    <p>{{location}} | {{period}}</p>
                    <ul>
                        {{#each bulletPoints}}
                            <li>{{this}}</li>
                        {{/each}}
                    </ul>
                </div>
            {{/each}}
        </section>        

        <section class="section">
            <h2>{{skillsAssessment.title}}</h2>
            <div class="skills-grid">
                {{#each skillsAssessment.items}}
                <div class="skill-item">
                    <div class="skill-name">{{name}}</div>
                    <div class="skill-level">
                        <div class="skill-level-fill" style="width: {{multiply level 10}}%;"></div>
                        <span class="skill-level-text">{{level}}/10</span>
                    </div>                    
                </div>
                {{/each}}
            </div>
        </section>

        <section class="section">
            <h2>{{hobbies.title}}</h2>
            <p>{{hobbies.description}}</p>
        </section>

        <section class="section section__projects">
            <h2>{{projects.title}}</h2>
            {{#each projects.items}}
                <div class="project">
                    <h3>{{name}}</h3>
                    <p><strong>{{company}}</strong></p>
                    <p><em>{{role}}</em></p>
                    <p>{{description}}</p>
                    <p><strong>Technologies:</strong> {{join technologies ", "}}</p>
                </div>
            {{/each}}
        </section>      
    </div>
    <script src="/js/theme-toggle.js"></script>
    <script src="https://kit.fontawesome.com/c40e0ab389.js" crossorigin="anonymous"></script>
</body>
</html>